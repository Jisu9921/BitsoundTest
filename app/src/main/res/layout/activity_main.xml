<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.soundlly.intern.jisu.bitsoundtest.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="BITSOUND"
            android:textSize="@dimen/bitsound_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/init_bs"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_play_circle_filled_green_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />

        <ImageView
            android:id="@+id/release_bs"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_pause_grey_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />

        <ImageView
            android:src="@drawable/mic_permission_selector"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/bitsound_layout_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="RECEIVER"
            android:textSize="@dimen/bitsound_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/start_detect"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_play_circle_filled_green_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />
        <ImageView
            android:id="@+id/stop_detect"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_pause_grey_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/bitsound_layout_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="SHAKING"
            android:textSize="@dimen/bitsound_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:id="@+id/start_shake_detect"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_play_circle_filled_green_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />
        <ImageView
            android:id="@+id/stop_shake_detect"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:src="@drawable/ic_pause_grey_500_24dp"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_heigt" />
    </LinearLayout>
</LinearLayout>
